<UserControl x:Class="RelayCommands.Views.UserDataControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:models="clr-namespace:RelayCommands.Models"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance Type={x:Type models:UserData}}"
             d:DesignHeight="300" d:DesignWidth="300">
    <StackPanel Orientation="Horizontal">
        <Image Source="{Binding Avatar}" Width="50" Height="50"></Image>
        <TextBlock Text="{Binding Name}" FontSize="24" VerticalAlignment="Center" Margin="10"></TextBlock>
    </StackPanel>
</UserControl>
